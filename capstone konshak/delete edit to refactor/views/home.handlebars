<form action="/" method="get">
	<fieldset>
		<legend>Users:</legend>
		<label>
			First Name:<br>
			<input type="text" id="firstname" /><br><br>
		</label>
		<label>
			Last Name:<br>
			<input type="text" id="lastname" /><br><br>
		</label>


		<label>
			Region:<br>
			<input type="number" id="region" /><br><br>
		</label>

		<label>
			Email:<br>
			<input type="email" id="email" /><br><br>
		</label>

		<label>
			Pasword:<br>
			<input type="text" id="password" /><br><br>
		</label>
		<label>
			Pasword2:<br>
			<input type="text" id="password2" /><br><br>
		</label>


		<label>
			<input id="submitPOST" type="submit" value="Submit" />
		</label>
	</fieldset>
</form>
<br>


<table id="dataTable">
	<thead>
		<th>First name</th>
		<th>Last Name</th>
		<th>Region</th>
		<th>Email</th>
		<th>Password</th>
		<th>Delete Row</th>
		<th>Edit Row</th>
	</thead>
	<tbody id="data">
		{{#each content}}
		<tr>
			<td>{{this.firstname}}</td>
			<td>{{this.lastname}}</td>
			<td>{{this.region}}</td>
			<td>{{this.email}}</td>
			<td>{{this.password}}</td>
			<td><input type="hidden" id="{{this.id}}" /><input type="button" id="deleteBtn" value="Delete" onclick="deleteRow('dataTable',this,{{this.id}})"></td>
			<td><input type="hidden" id="{{this.id}}" /><input type="button" id="editBtn" value="Edit" onclick="document.location.href='/edit?id='+{{this.id}}"
				 )></td>
		</tr>
		{{/each}}
	</tbody>
</table>

<script src="post.js"></script>